<script src="http://labelwriter.com/software/dls/sdk/js/DYMO.Label.Framework.latest.js"
        type="text/javascript" charset="UTF-8"> </script>

<h1>Listing rsvps</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Status</th>
    <th>Printed</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<div id="rsvp-count">
</div>

<% Rsvp.all.each do |rsvp| %>
  <tr>
    <td><%= rsvp.guest.full_name %></td>
    <td><%= rsvp.status %></td>
    <td><%= rsvp.printed %></td>
    <td><%= link_to 'Show', rsvp %></td>
    <td><%= link_to 'Edit', edit_rsvp_path(rsvp) %></td>
    <td><%= link_to 'Destroy', rsvp, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Rsvp', new_rsvp_path %>

<script>
  $(function() {
      setTimeout(updateComments, 1000);
  });

  function updateComments () {
    $.getScript("/rsvps.js")
    setTimeout(updateComments, 1000);
  }
</script>
